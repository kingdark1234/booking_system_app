<div class="container" style="background: #e5e5e5; border: 1px solid #f5f5f5;"><h1>New Room</h1>
<%= form_for @room, html: { class: 'form-horizontal' } do |f| %>
  <%= render 'shared/error_log', target: @room %>
  <div class='control-group'>
    <%= f.label "Room Name", class: 'control-label' %>
    <div class='controls'>
      <%= f.text_field :room_name, class: 'input-xxlarge' %>
    </div>
  </div>
   <div class='control-group'>
    <%= f.label "Area parent", class: 'control-label' %>
    <div class='controls'>
      <%= f.select :roometable_id, Area.all.map { |area| [area.area_name,area.id]  },class: 'input-xxlarge' %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label "Description", class: 'control-label' %>
    <div class='controls'>
      <%= f.text_area :room_description, class: 'input-xxlarge', size: '10x10' %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label "Capacity", class: 'control-label' %>
    <div class='controls'>
      <%= f.text_field :capacity, class: 'input-mini' %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label "Enabled:", class: 'control-label' %>
    <div class='controls'>
      <%= f.check_box :is_active, {checked: true}, '1', '0'%>
    </div>
  </div>
  
  <div class='form-actions'>
    <%= f.submit "Create Room", class: 'btn btn-success' %>
  </div>
<% end %>
</div>